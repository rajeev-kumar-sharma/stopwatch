{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "pretty": true,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "moduleResolution": "node"
  },
  "include": [
    "lib/**/*.ts",
    "test/**/*.ts",
    "index.ts"
  ]
}